<Window x:Class="XEditor.LayerTextInputDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XEditor"
        mc:Ignorable="d"
        Title="LayerTextInputDialogue" Height="115.483" Width="447.301">
    <Grid>
        <Label Content="Layer name" Margin="5" Grid.ColumnSpan="2"/>
        <Grid Margin="10,42,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300*"/>
                <ColumnDefinition Width="163*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="LayerText" />
            <Button Content="OK"  Grid.Column="1" Margin="15,0,0,0" Click="Button_Click"  IsDefault="True" />
        </Grid>
        
    </Grid>
</Window>
