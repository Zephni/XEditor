<Window x:Class="XEditor.DefaultLayers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XEditor"
        mc:Ignorable="d"
        Title="Default layers" Height="250.347" Width="480">
    <Grid Margin="4, 4, 4, 4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="120"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Margin="4,0,4,0">Default layers (Will only effect new levels)</Label>

        <TextBox x:Name="Layers" Grid.Column="0" Grid.Row="1" Margin="4,4,4,4" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
        <Grid Grid.Column="0" Grid.Row="2">
            <TextBlock Margin="4,4,4,4">Default selected</TextBlock>
            <TextBox x:Name="DefaultLayer" Margin="102,4,4,4" Text="Main"></TextBox>            
        </Grid>
        
        <Button Content="Update default layers" Grid.Column="0" Grid.Row="3"  Margin="4,4,4,4" Click="UpdateDefaultLayers" />

    </Grid>
</Window>
